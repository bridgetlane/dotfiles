set mouse=a         " use the mouse on mac by hitting alt and clicking
set nocompatible    " ward off weirdness
set hidden          " open a new file while in current file by using :e
set number          " line numbers
syntax on           " enable syntax highlighting
set backspace=2     " make backspace normal
set softtabstop=4   " indentation settings
set expandtab
filetype plugin indent on   " file-type-specific indentation
set wildmenu        " add wildmenu
set wildmode=longest:full,full
set showcmd         " show commands
set showmatch       " show matching parenthesis
set autoindent      " autoindenting settings
set copyindent      " copy previous indentation on autoindent
set shiftwidth=4    " number of spaces to use for autoindent
set shiftround      " use multiple of shiftwidth when shifting
set ignorecase      " search settings - ignore case on search
set hlsearch        " highlight search terms
set incsearch       " show search matches while typing
set history=1000    " bigger history
set undolevels=1000 " lots of undo
set title

